{
  "name": "@taxdom/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "license": "AGPL-3.0-only",
  "scripts": {
    "start": "node bin/server.js",
    "build": "node ace build",
    "dev": "node ace serve --hmr",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate && pnpx @better-auth/cli generate --config config/auth.ts --output database/auth-schema.ts --y",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push"
  },
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#database/*": "./database/*.js",
    "#start/*": "./start/*.js",
    "#tests/*": "./tests/*.js",
    "#types/*": "./types/*.js",
    "#config/*": "./config/*.js"
  },
  "dependencies": {
    "@adonisjs/core": "6.17.2",
    "@adonisjs/cors": "2.2.1",
    "@adonisjs/limiter": "2.4.0",
    "@adonisjs/redis": "9.2.0",
    "@adonisjs/session": "7.5.1",
    "@libsql/client": "0.15.4",
    "@vinejs/vine": "3.0.1",
    "better-auth": "1.2.7",
    "drizzle-orm": "0.42.0",
    "luxon": "3.6.1",
    "reflect-metadata": "0.2.2"
  },
  "devDependencies": {
    "@adonisjs/assembler": "7.8.2",
    "@adonisjs/eslint-config": "2.0.0",
    "@adonisjs/tsconfig": "1.4.0",
    "@swc/core": "1.11.21",
    "@taxdom/types": "workspace:*",
    "@types/luxon": "^3.6.2",
    "@types/node": "^22.14.1",
    "drizzle-kit": "0.31.0",
    "eslint": "9.25.1",
    "hot-hook": "0.4.0",
    "pino-pretty": "13.0.0",
    "ts-node-maintained": "10.9.5",
    "typescript": "5.8.3"
  },
  "hotHook": {
    "boundaries": ["./app/controllers/**/*.ts", "./app/middleware/*.ts"]
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "packageManager": "pnpm@10.10.0"
}
