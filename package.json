{
  "name": "taxdom",
  "version": "0.1.0",
  "author": "zeis974 <hi@zeis.dev>",
  "description": "soon",
  "license": "AGPL-3.0-only",
  "scripts": {
    "prepare": "husky",
    "dev": "turbo run dev",
    "dev:web": "pnpm --filter @taxdom/app dev",
    "dev:db": "docker compose -f compose.dev.yml up -d --build db",
    "dev:api": "pnpm --filter @taxdom/api dev",
    "build": "turbo run build",
    "build:images": "docker compose -f compose.dev.yml up -d --build",
    "format": "biome format . --write"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "eslint": "8.57.0",
    "husky": "9.1.6",
    "lint-staged": "15.2.10",
    "turbo": "2.1.1",
    "typescript": "5.6.2"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@9.10.0",
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome format --write --no-errors-on-unmatched"
    ]
  }
}
