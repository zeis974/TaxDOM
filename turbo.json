{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["API_URL"],
  "tasks": {
    "build": {
      "outputs": [".next/**", "build", "!.next/cache/**"],
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    }
  }
}
